import {useState, useEffect} from "react";
import ListItem from "@mui/material/ListItem";
import ListItemButton from "@mui/material/ListItemButton";
import ListItemText from "@mui/material/ListItemText";
const NavLink=(props)=> {
	const {text, href, shortcutKey, target}=props;
	useEffect(()=> {
		const navLinks=document.getElementsByTagName("NavLink");
		document.addEventListener("keydown", (evt)=> {
			if(evt.altKey) {
				navLinks.forEach((navLink)=> {
					const shortcutKey=navLink.props.shortcutKey;
					if(evt.key==shortcutKey) {
						navLink.click();
					}
				})
			}
			});
	}
}
	return (
		<ListItem>
			<ListItemButton component="a" href={href} target={target}>
				<ListItemText>
					{text}
				</ListItemText>
			</ListItemButton>
		</ListItem>
	);
}
export default NavLink;